        android:gravity="center"
        android:padding="5dp"
        android:textColor="#fff000"
        android:text="Các bài hát yêu thích" />

    <ListView
        android:id="@+id/lvBaiHat"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>